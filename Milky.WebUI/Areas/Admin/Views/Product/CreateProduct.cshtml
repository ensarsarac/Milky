@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Yeni Ürün Ekle</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <div class="form-group">
                        <label class="form-label">Ürün Adı</label>
                        <input type="text" class="form-control" name="ProductName" placeholder="Ürün Adı" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Eski Fiyat</label>
                        <input type="text" class="form-control" name="OldPrice" placeholder="Eski Fiyat" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Yeni Fiyat</label>
                        <input type="text" class="form-control" name="NewPrice" placeholder="Yeni Fiyat" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Görsel Link</label>
                        <input type="text" class="form-control" name="ImageUrl" placeholder="Görsel Link" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Ürün Kategorisi</label>
                        @Html.DropDownListFor(x => x.CategoryId, (SelectList)ViewBag.categories,"Kategori Seçiniz",new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>



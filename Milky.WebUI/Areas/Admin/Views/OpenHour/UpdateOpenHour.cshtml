@model UpdateOpenHourDto
@{
    ViewData["Title"] = "UpdateOpenHour";
    ViewData["InnerTitle"] = "Çalışma Saatleri Alanı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Yeni Çalışma Saati Ekle</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <input type="hidden" asp-for="OpenHourId" />
                    <div class="form-group">
                        <label class="form-label">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama" />
                    </div>
                    <button type="submit" class="btn btn-outline-warning">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

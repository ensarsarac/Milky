@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    ViewData["InnerTitle"] = "Hakkımızda Alanı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Yeni Hakkımızda Alanı Ekle</h2>
                    <p class="mt-3">Tema bütünlüğü için lütfen 1 veri girişi yapınız.</p>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <div class="form-group">
                        <label class="form-label">Başlık</label>
                        <input type="text" class="form-control" name="Title" placeholder="Başlık"/>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 1</label>
                        <input type="text" class="form-control" name="Services1" placeholder="Servis 1" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 1 İkon</label>
                        <input type="text" class="form-control" name="Services1Icon" placeholder="Servis 1 İkon" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 1 Açıklama</label>
                        <textarea type="text" class="form-control" cols="3" rows="3" name="Services1Description" placeholder="Servis 1 Açıklama"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 2</label>
                        <input type="text" class="form-control" name="Services2" placeholder="Servis 2" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 2 İkon</label>
                        <input type="text" class="form-control" name="Services2Icon" placeholder="Servis 2 İkon" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 2 Açıklama</label>
                        <textarea type="text" class="form-control" cols="3" rows="3" name="Services2Description" placeholder="Servis 2 Açıklama"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label">1. Resim Url</label>
                        <input type="text" class="form-control" name="ImageUrl1" placeholder="1. Resim Url" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">2. Resim Url</label>
                        <input type="text" class="form-control" name="ImageUrl2" placeholder="2. Resim Url" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">3. Resim Url</label>
                        <input type="text" class="form-control" name="ImageUrl3" placeholder="3. Resim Url" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Açıklama</label>
                        <textarea type="text" class="form-control" cols="5" rows="5" name="Description" placeholder="Açıklama"></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
    

@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    ViewData["InnerTitle"] = "Hakkımızda Alanı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Hakkımızda Alanı Güncelle</h2>
                    <p class="mt-3">Tema bütünlüğü için lütfen 1 veri girişi yapınız.</p>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <input type="hidden" asp-for="AboutId" />
                    <div class="form-group">
                        <label class="form-label">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 1</label>
                        <input type="text" class="form-control" asp-for="Services1" placeholder="Servis 1" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 1 İkon</label>
                        <input type="text" class="form-control" asp-for="Services1Icon" placeholder="Servis 1 İkon" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 1 Açıklama</label>
                        <textarea type="text" class="form-control" cols="3" rows="3" asp-for="Services1Description" placeholder="Servis 1 Açıklama">@Model.Services1Description</textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 2</label>
                        <input type="text" class="form-control" asp-for="Services2" placeholder="Servis 2" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 2 İkon</label>
                        <input type="text" class="form-control" asp-for="Services2Icon" placeholder="Servis 2 İkon" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Servis 2 Açıklama</label>
                        <textarea type="text" class="form-control" cols="3" rows="3" asp-for="Services2Description" placeholder="Servis 2 Açıklama">@Model.Services2Description</textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label">1. Resim Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl1" placeholder="1. Resim Url" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">2. Resim Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl2" placeholder="2. Resim Url" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">3. Resim Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl3" placeholder="3. Resim Url" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Açıklama</label>
                        <textarea type="text" class="form-control" cols="5" rows="5" asp-for="Description" placeholder="Açıklama">@Model.Description</textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-warning">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
    </div>


@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    ViewData["InnerTitle"] = "Hakkımızda Alanı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Hakkımız Alanı Listesi</h2>
                    <p class="mt-3">Tema bütünlüğü için lütfen 1 veri girişi yapınız.</p>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>1. Servis</th>
                                <th>2. Servis</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Services1</td>
                                    <td>@item.Services2</td>
                                    <td><button onclick="areyousure(this)" id="@item.AboutId" class="btn btn-outline-danger">Sil</button></td>
                                    <td><a href="/Admin/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-outline-warning">Güncelle</a></td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                    <a href="/Admin/AdminAbout/CreateAbout" class="btn btn-outline-primary">Yeni Hakkımızda Alanı Ekle</a>
                </div>
            </div>
        </div>
    </div>
    <script>
        function areyousure(button) {
            var id = button.getAttribute("id");
            Swal.fire({
                title: "Silmek istediğinize emin misiniz?",
                text: "Bu işlemi geri alamazsınız",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, Sil!",
                cancelButtonText: "İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/AdminAbout/DeleteAbout/" + id;
                }
            });
        }
    </script>

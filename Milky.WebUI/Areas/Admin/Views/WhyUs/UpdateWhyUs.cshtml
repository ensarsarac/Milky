@model UpdateWhyUsDto
@{
    ViewData["Title"] = "UpdateWhyUs";
    ViewData["InnerTitle"] = "Neden Biz Alanı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Neden Biz Alanı Güncelle</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <input type="hidden" asp-for="WhyUsId" />
                    <div class="form-group">
                        <label class="form-label">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Slider Başlığı" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Madde 1</label>
                        <input type="text" class="form-control" asp-for="Article1" placeholder="Madde 1" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Madde 2</label>
                        <input type="text" class="form-control" asp-for="Article2" placeholder="Madde 2" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Madde 3</label>
                        <input type="text" class="form-control" asp-for="Article3" placeholder="Madde 3" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Açıklama</label>
                        <textarea type="text" class="form-control" asp-for="Description" placeholder="Açıklaması">@Model.Description</textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-warning">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

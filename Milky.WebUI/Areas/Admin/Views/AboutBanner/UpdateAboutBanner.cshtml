@model UpdateAboutBanner
@{
    ViewData["Title"] = "UpdateAboutBanner";
    ViewData["InnerTitle"] = "Hakkımızda Banner Alanı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Hakkımızda Banner Güncelle</h2>
                    <p class="mt-3">Tema bütünlüğü için lütfen 2 veri girişi yapınız.</p>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <input type="hidden" asp-for="AboutBannerId" />
                    <div class="form-group">
                        <label class="form-label">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Görsel URl</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Görsel URl" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Açıklama</label>
                        <textarea type="text" class="form-control" cols="5" rows="5" asp-for="Description" placeholder="Açıklama">@Model.Description</textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-warning">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
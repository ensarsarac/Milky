@model UpdateContactInfoDto
@{
    ViewData["Title"] = "UpdateContactInfo";
    ViewData["InnerTitle"] = "İletişim Bilgileri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Yeni İletişim Bilgileri Ekle</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <form method="post">
                    <input type="hidden" asp-for="ContactInfoId" />
                    <div class="form-group">
                        <label class="form-label">Adres</label>
                        <input type="text" class="form-control" asp-for="Address" placeholder="Adres" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Telefon</label>
                        <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" asp-for="Email" placeholder="Email" />
                    </div>
                    <button type="submit" class="btn btn-outline-warning">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

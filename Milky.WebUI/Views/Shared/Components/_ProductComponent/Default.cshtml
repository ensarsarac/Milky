@model List<ResultProductDto>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="section-title bg-white text-center text-primary px-3">Ürünlerimiz</p>
            <h1 class="mb-5">Sağlıklı Yaşam İçin Süt Ürünlerimiz</h1>
        </div>
        <div class="row gx-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="product-item">
                        <div class="position-relative">
                            @if (item.Status)
                            {
                                <img class="img-fluid" src="@item.ImageUrl" style="height:250px;" alt="">
                            }
                            else
                            {
                                <img class="img-fluid" src="@item.ImageUrl" style="height:250px;filter:brightness(0.4)" alt="">
                            }

                            <div class="product-overlay">
                                <a class="btn btn-square btn-secondary rounded-circle m-1" href=""><i class="bi bi-link"></i></a>
                                <a class="btn btn-square btn-secondary rounded-circle m-1" href=""><i class="bi bi-cart"></i></a>
                            </div>
                        </div>
                        <div class="text-center p-4">
                            <a class="d-block h5" href="">@item.ProductName</a>
                            @if (!item.Status)
                            {
                                <span style="color:red;">Ürün henüz mevcut değil</span>
                            }
                            else
                            {
                                <span class="text-primary me-1">@item.NewPrice</span>
                                <span class="text-decoration-line-through">@item.OldPrice</span>
                            }
                            
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>
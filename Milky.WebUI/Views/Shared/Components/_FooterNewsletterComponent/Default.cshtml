@model CreateNewsletterDto
<div class="col-lg-3 col-md-6">
    <h5 class="text-white mb-4">Mail Bülteni</h5>
    <p>Kampanyalardan haberdar olmak için abone olabilirsiniz.</p>
    <div class="position-relative w-100">
        <form method="post" action="/Default/CreateNewsletter">
        <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text" name="Email" placeholder="Your email">
        <button type="submit" class="btn btn-secondary py-2 position-absolute top-0 end-0 mt-2 me-2">Abone Ol</button>
        </form>
    </div>
</div>